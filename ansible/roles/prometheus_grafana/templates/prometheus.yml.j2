global:
    scrape_interval:     30s # set the scrape interval to every 30 second.
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets: ['0.0.0.0:9090', '0.0.0.0:9100']
      labels:
        instance: prometheus
  - job_name: 'flaskapp'
    static_configs:
    - targets: ['{{ groups['appServer'][0] }}:8000']
      labels:
        instance: prometheus